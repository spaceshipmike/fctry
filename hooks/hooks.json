{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node -e \"const f='${PWD}/.fctry/state.json';require('fs').existsSync(f)&&require('fs').writeFileSync(f,'{}\\n')\"",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/dev-link-ensure.sh\"",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/migrate.sh\" \"${PWD}\"",
            "timeout": 15
          },
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/src/viewer/manage.sh\" ensure \"${PWD}\" \"${CLAUDE_PLUGIN_ROOT}\"",
            "async": true,
            "timeout": 10
          },
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/src/statusline/ensure-config.sh\" \"${PWD}\" \"${CLAUDE_PLUGIN_ROOT}\"",
            "async": true,
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "^(Write|Edit)$",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/detect-untracked.js\"",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionEnd": []
  }
}
